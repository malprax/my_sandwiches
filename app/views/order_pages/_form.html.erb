<%= form_for(@order_page) do |f| %>
  <% if @order_page.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@order_page.errors.count, "error") %> prohibited this order_page from being saved:</h2>

      <ul>
      <% @order_page.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
      <%= Time.now.strftime('%d %b, %Y')%>
      <%#= f.label :date %><br />
      <%#= f.date_select :date, start_year:Date.today.year , end_year: Date.today.year %>
  </div>

  
  <div class="field">
    <%= f.label :order_quantity %>
    <%= f.number_field :order_quantity, start_order:1, end_order:100 %>  
  </div>
  
  <div class="field">
        <%= f.label :bread_type %>
        <%= f.radio_button :bread_type, 1 %> White
        <%= f.radio_button :bread_type, 2 %> Brown       
  </div>
  
  <div class="field">
        <%= f.label :sandwiches_type %>
        <%= f.radio_button :sandwiches_type, 1 %> Standard
        <%= f.radio_button :sandwiches_type, 2 %> Own    
  </div>  
  
  <div class="field">
        <%= f.label :pick_up_time %>
        <%= radio_button_tag :pick_up_time, 1 %> 11.30 - 12.00
       <%= radio_button_tag :pick_up_time, 2 %> 12.00 - 12.30
       <%= radio_button_tag :pick_up_time, 3 %> 12.30 - 13.00
       <%= radio_button_tag :pick_up_time, 4 %> 13.00 - 13.30
       <%= radio_button_tag :pick_up_time, 5 %> 13.30 - 14.00    
  </div>   
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
