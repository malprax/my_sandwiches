<%= simple_form_for(@order_page) do |f| %>
  <% if @order_page.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@order_page.errors.count, "error") %> prohibited this order_page from being saved:</h2>

      <ul>
      <% @order_page.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
 
      Date <%=  Time.now.strftime('%d %b, %Y')%>
      <%#= f.label :date %><br />
      <%#= f.date_select :date, start_year:Date.today.year , end_year: Date.today.year %>
  

      <%=  f.input :pick_up_time, 
                :collection => [[1, '11.30 - 12.00'], [2, '12.00 - 12.30'],[3, '12.30 - 13.00'],[4, '13.00 - 13.30'],[5, '13.30 - 14.00']], 
                :label_method => :last, 
                :value_method => :first,                  
                :item_wrapper_class => 'inline',
                :checked => true,
                :default => 1,
                class: "pik"
      %>     
 
      <%= f.input :order_quantity, collection:1..10, default:1, class: "order"%>
   
  
  
  
      <%=  f.input :bread_type, 
              :collection => [[true, 'White'], [false, 'Brown']], 
              :label_method => :last, 
              :value_method => :first,
              :item_wrapper_class => 'inline',
              :checked => true,
              :default => true,
                  class: "bt"
              
      %>
        
  
  
 
       
      <%=  f.input :sandwiches_type, 
                  :collection => [[true, 'Standard'], [false, 'Own ']], 
                  :label_method => :last, 
                  :value_method => :first,
                  :item_wrapper_class => 'inline',
                  :checked => true,
                  :default => true,
                  class: "st"
      %>  
  
  
      
       
   
  
  
    <%= f.button :submit, label= "Check Out", class:"btn btn-primary" %>
  
<% end %>
